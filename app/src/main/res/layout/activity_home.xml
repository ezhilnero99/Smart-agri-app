<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activities.home">

    <LinearLayout
        android:id="@+id/headerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoutIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:srcCompat="@drawable/logout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/arima"
            android:gravity="center"
            android:text="ThinkAgri"
            android:textColor="@color/dark_grey"
            android:textAlignment="gravity"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/detailsIV"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:tint="@color/dark_blue"
            app:srcCompat="@drawable/menudots" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLL"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/suggentionRL"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rectangle_blue"
            android:backgroundTint="@color/trans_light_grey">

            <TextView
                android:id="@+id/sugg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thin_block"
                android:text="Suggestion"
                android:textColor="@color/purple"
                android:textSize="18dp" />

            <TextView
                android:layout_below="@id/sugg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arima"
                android:text="Get suggestions for your garden..."
                android:textColor="@color/purple"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/howtoRL"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rectangle_blue"
            android:backgroundTint="@color/trans_light_grey">

            <TextView
                android:id="@+id/howto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thin_block"
                android:text="How To"
                android:textColor="@color/purple"
                android:textSize="18dp" />

            <TextView
                android:layout_below="@id/howto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arima"
                android:text="Guide on how to grow plants..."
                android:textColor="@color/purple"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shopRL"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rectangle_blue"
            android:backgroundTint="@color/trans_light_grey">

            <TextView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thin_block"
                android:text="Shop"
                android:textColor="@color/purple"
                android:textSize="18dp" />

            <TextView
                android:layout_below="@id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arima"
                android:text="One Stop for all ur needs..."
                android:textColor="@color/purple"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/arenaRL"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rectangle_blue"
            android:backgroundTint="@color/trans_light_grey">

            <TextView
                android:id="@+id/arena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/thin_block"
                android:text="Arena"
                android:textColor="@color/purple"
                android:textSize="18dp" />

            <TextView
                android:layout_below="@id/arena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arima"
                android:text="Share Ur Happiness here..."
                android:textColor="@color/purple"
                android:textSize="13dp" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>